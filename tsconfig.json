{
  "compilerOptions": {
    "target": "ES2024",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src", "db"],
  "exclude": ["node_modules", "dist"]
}
